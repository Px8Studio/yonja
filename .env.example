# Yonca AI Environment Configuration
# Copy this file to .env and customize values

# ===========================================
# LLM Provider Configuration (choose one)
# ===========================================

# Option 1: Google Gemini (Cloud - Recommended for production)
# GOOGLE_API_KEY=your-google-api-key-here
# YONCA_LLM_PROVIDER=gemini
# YONCA_LLM_MODEL=gemini-2.0-flash  # or gemini-1.5-pro, gemini-1.5-flash

# Option 2: Local Ollama with Qwen2 (FREE - Best for Azerbaijani!)
# Qwen2 has excellent Turkic language support including Azerbaijani
YONCA_LLM_PROVIDER=ollama
YONCA_LLM_MODEL=qwen2.5:7b  # Best balance of speed & quality for Azerbaijani
# Alternative models for Azerbaijani:
# YONCA_LLM_MODEL=qwen2.5:14b    # Higher quality, slower
# YONCA_LLM_MODEL=qwen2.5:3b     # Faster, lighter
# YONCA_LLM_MODEL=aya:8b         # Cohere's multilingual model

# ===========================================
# Application Settings
# ===========================================
YONCA_APP_NAME="Yonca AI"
YONCA_APP_VERSION="0.2.0"
YONCA_DEBUG=false

# API Settings
YONCA_API_PREFIX="/api/v1"
YONCA_CORS_ORIGINS=["*"]

# Database (SQLite for offline support)
YONCA_DATABASE_URL="sqlite+aiosqlite:///./yonca.db"

# Recommendation Engine
YONCA_DEFAULT_LANGUAGE="az"
YONCA_RECOMMENDATION_CONFIDENCE_THRESHOLD=0.7
YONCA_MAX_DAILY_RECOMMENDATIONS=10

# Weather Simulation
YONCA_WEATHER_UPDATE_INTERVAL_HOURS=6

# Chatbot
YONCA_CHATBOT_CONFIDENCE_THRESHOLD=0.6
YONCA_CHATBOT_FALLBACK_MESSAGE="Bağışlayın, sualınızı başa düşmədim. Zəhmət olmasa yenidən cəhd edin."
