# Yonca AI - Local Development Environment
# Copy to .env for local development

# ===== Deployment =====
YONCA_DEPLOYMENT_MODE=local
YONCA_ENVIRONMENT=development
YONCA_DEBUG=true

# ===== API =====
YONCA_API_HOST=0.0.0.0
YONCA_API_PORT=8000
YONCA_API_WORKERS=1
YONCA_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]

# ===== LLM Provider =====
YONCA_LLM_PROVIDER=ollama

# Ollama (Local) - Qwen3 has excellent Azerbaijani support
# Switch models: qwen3:4b, qwen3:1.7b, llama3.2, mistral, gemma2, etc.
YONCA_OLLAMA_BASE_URL=http://localhost:11434
YONCA_OLLAMA_MODEL=qwen3:4b

# Gemini (Cloud) - Uncomment if switching to cloud mode
# YONCA_GEMINI_API_KEY=your-api-key-here
# YONCA_GEMINI_MODEL=gemini-2.0-flash-exp

# ===== Database =====
YONCA_DATABASE_URL=sqlite+aiosqlite:///./data/yonca.db
YONCA_DATABASE_POOL_SIZE=5
YONCA_DATABASE_MAX_OVERFLOW=10

# ===== Redis =====
YONCA_REDIS_URL=redis://localhost:6379/0
YONCA_REDIS_MAX_CONNECTIONS=20

# ===== Security =====
YONCA_JWT_SECRET=dev-secret-change-in-production
YONCA_JWT_ALGORITHM=HS256
YONCA_JWT_EXPIRY_HOURS=24

# ===== Rate Limiting =====
YONCA_RATE_LIMIT_REQUESTS_PER_MINUTE=60
YONCA_RATE_LIMIT_BURST=100

# ===== Observability =====
YONCA_LOG_LEVEL=DEBUG
YONCA_LOG_FORMAT=console
YONCA_PROMETHEUS_ENABLED=false

# ===== App Metadata =====
YONCA_APP_NAME=Yonca AI
YONCA_APP_VERSION=0.1.0

# ===== Localization =====
YONCA_DEFAULT_LANGUAGE=az
