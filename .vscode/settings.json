{
  // Add Poetry to terminal PATH for this workspace
  "terminal.integrated.env.windows": {
    "PATH": "${env:USERPROFILE}\\AppData\\Roaming\\Python\\Scripts;${env:PATH}"
  },

  // Enforce LF line endings in the editor
  "files.eol": "\n",

  // Python settings for Poetry integration
  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",

  // Enable .env file loading in terminals
  "python.terminal.useEnvFile": true,
  "python.envFile": "${workspaceFolder}/.env",

  // Optional: Auto-select Poetry's virtual environment
  "python.poetryPath": "poetry",

  // REST Client environment variables
  "rest-client.environmentVariables": {
    "$shared": {
      "baseUrl": "http://localhost:8000",
      "chatEndpoint": "/api/v1/chat",
      "modelsEndpoint": "/api/models"
    }
  },

  // Disable JSON schema validation for MCP config files
  "json.schemas": [
    {
      "fileMatch": ["**/mcp.json"],
      "schema": {
        "type": "object",
        "properties": {
          "servers": { "type": "object" },
          "inputs": { "type": "array" }
        },
        "additionalProperties": true
      }
    }
  ],

  // MCP Settings
  "chat.mcp.gallery.enabled": true,
  "chat.mcp.serverSampling": {
    "yonja/.vscode/mcp.json: microsoft/markitdown": {
      "allowedModels": [
        "copilot/claude-sonnet-4.5",
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-41",
        "copilot/claude-opus-4.5",
        "copilot/claude-sonnet-4",
        "copilot/gemini-2.5-pro",
        "copilot/gemini-3-flash-preview",
        "copilot/gemini-3-pro-preview",
        "copilot/gpt-4.1",
        "copilot/gpt-4o",
        "copilot/gpt-5",
        "copilot/gpt-5-mini",
        "copilot/gpt-5-codex",
        "copilot/gpt-5.1",
        "copilot/gpt-5.1-codex",
        "copilot/gpt-5.1-codex-max",
        "copilot/gpt-5.1-codex-mini",
        "copilot/gpt-5.2",
        "copilot/gpt-5.2-codex",
        "copilot/grok-code-fast-1",
        "copilot/oswe-vscode-prime"
      ]
    }
  }
}
