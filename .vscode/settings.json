{
  // Add Poetry to terminal PATH for this workspace
  "terminal.integrated.env.windows": {
    "PATH": "${env:USERPROFILE}\\AppData\\Roaming\\Python\\Scripts;${env:PATH}"
  },

  // Enforce LF line endings in the editor
  "files.eol": "\n",

  // Python settings for Poetry integration
  "python.terminal.activateEnvironment": true,
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",

  // Enable .env file loading in terminals
  "python.terminal.useEnvFile": true,
  "python.envFile": "${workspaceFolder}/.env",

  // Optional: Auto-select Poetry's virtual environment
  "python.poetryPath": "poetry",

  // REST Client environment variables
  "rest-client.environmentVariables": {
    "$shared": {
      "baseUrl": "http://localhost:8000",
      "chatEndpoint": "/api/v1/chat",
      "modelsEndpoint": "/api/models"
    }
  },
  "chat.mcp.gallery.enabled": true
}
